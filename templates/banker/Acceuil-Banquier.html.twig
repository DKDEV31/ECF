{% block content %}
    <div class="grid-container">
        <aside class="side-menu">

        </aside>
        <main class="main-menu">
            {% if clients is empty %}
            <p>Vous n'avez pas encore de clients</p>
            {% else %}
                {% for client in clients %}
                    <div class="client-container">
                        <div class="client-info">
                            <span>Client NÂ° {{ client.id }}</span>
                            <span>{{ client.firstname|capitalize}} {{ client.lastname|capitalize}}</span>
                        </div>
                        <div class="client-style">
                            <div class="client-style-gradient"></div>
                            <img src="{{ asset('/svg/waveSvg.svg') }}" alt="wave form" class="client-style-img">
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </main>
    </div>
{% endblock %}
