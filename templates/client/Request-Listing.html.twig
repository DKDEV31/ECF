{% extends 'base.html.twig' %}

{% block title %}Mes demandes{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('ClientRequest') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('ClientRequest') }}
{% endblock %}
{% block callToAction %}
{% endblock %}
{% block content %}
    <div class="container-grid-horizontal">
        <aside class="main-box side-menu">
            <ul>
                <li><a href="{{ path('app_client', {userId: app.user.id}) }}" class="link">Comptes</a></li>
                <li><a href="{{ path('app_client_transfer', {userId: app.user.id}) }}" class="link">Virements</a></li>
                <li><a href="{{ path('app_client_request', {userId: app.user.id}) }}" class="link">Demandes</a></li>
                <li><a href="{{ path('app_client_benefit_view', {userId: app.user.id}) }}" class="link">Bénéficiares</a></li>
            </ul>
        </aside>
        <main class="main-box">
            {% if accountRequest is empty and deleteRequest is empty%}
            <p>Aucune Demande en cours</p>
            {% else %}
                {% for request in accountRequest %}
                <div class="box">
                    <div class="box-content">
                        <span class="request-number">N° Demande: {{ request.id }}</span>
                        <span class="request-type">{{ request.type }}</span>
                    </div>
                    <div class="box-action">
                        <span class="request-state">{{ request.state }}</span>
                    </div>
                </div>
                {% endfor %}
                {% for request in deleteRequest %}
                    <div class="box">
                        <div class="box-content">
                            <span class="request-number">N° Demande: {{ request.id }}</span>
                            <span class="request-type">{{ request.type }}</span>
                        </div>
                        <div class="box-action">
                            <span class="request-state">{{ request.state }}</span>
                        </div>
                    </div>
                {% endfor %}
                {% for request in benefitRequest %}
                    <div class="box">
                        <div class="box-content">
                            <span class="request-number">N° Demande: {{ request.id }}</span>
                            <span class="request-type">{{ request.type }}</span>
                        </div>
                        <div class="box-action">
                            <span class="request-state">{{ request.state }}</span>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </main>
    </div>
{% endblock %}
