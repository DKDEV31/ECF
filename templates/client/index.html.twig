{% extends 'base.html.twig' %}

{% block title %}Votre espace client{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('client') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('client') }}
{% endblock %}
{% block callToAction %}
{% endblock %}
{% block content %}
    <div class="grid-container">
        <aside class="side-menu">

        </aside>
        <main class="main-menu">
            {% if accounts is empty %}
            <p>Veuillez créer un compte</p>
            <a href="{{ path('app_account_add') }}" class="btn-info addAccount">Ajouter un compte</a>
            {% else %}
            {% for account in accounts %}
                <div class="account-container">
                    <div class="account-content">
                        <span>{{ account.type }}</span>
                        <span>{{ account.amount }}€</span>
                    </div>
                    <div class="accoun-actions">
                        <a href="/client/account/{{ account.id }}" class="btn-round btn-info">voir</a>
                        <a href="/client/account/delete/{{ account.id }}" class="btn-danger btn-round" role="button"><img src="/svg/closeIcon.svg" alt="close icon"></a>
                    </div>
                </div>
            {% endfor %}
            <a href="{{ path('app_account_add') }}" class="btn-info addAccount">Ajouter un compte</a>
            {% endif %}
        </main>
    </div>
{% endblock %}
